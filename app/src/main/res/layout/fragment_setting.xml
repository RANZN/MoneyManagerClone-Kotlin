<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NavBarFragments.SettingFragment">

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Setting"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text=""
        android:textColor="@color/expense"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSetting" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">


                <ImageView
                    android:id="@+id/sConfiguration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/setting"
                    app:layout_constraintEnd_toStartOf="@id/sAccount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuration"
                    app:layout_constraintEnd_toEndOf="@id/sConfiguration"
                    app:layout_constraintStart_toStartOf="@id/sConfiguration"
                    app:layout_constraintTop_toBottomOf="@id/sConfiguration" />

                <ImageView
                    android:id="@+id/sAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/account"
                    app:layout_constraintEnd_toStartOf="@id/sPasscode"
                    app:layout_constraintStart_toEndOf="@id/sConfiguration"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    app:layout_constraintEnd_toEndOf="@id/sAccount"
                    app:layout_constraintStart_toStartOf="@id/sAccount"
                    app:layout_constraintTop_toBottomOf="@id/sAccount" />

                <ImageView
                    android:id="@+id/sPasscode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_lock"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sAccount"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passcode"
                    app:layout_constraintEnd_toEndOf="@id/sPasscode"
                    app:layout_constraintStart_toStartOf="@id/sPasscode"
                    app:layout_constraintTop_toBottomOf="@id/sPasscode" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">


                <ImageView
                    android:id="@+id/sManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_manager"
                    app:layout_constraintEnd_toStartOf="@id/sBackUp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager"
                    app:layout_constraintEnd_toEndOf="@id/sManager"
                    app:layout_constraintStart_toStartOf="@id/sManager"
                    app:layout_constraintTop_toBottomOf="@id/sManager" />

                <ImageView
                    android:id="@+id/sBackUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_backup"
                    app:layout_constraintEnd_toStartOf="@id/sStyle"
                    app:layout_constraintStart_toEndOf="@id/sManager"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BackUp"
                    app:layout_constraintEnd_toEndOf="@id/sBackUp"
                    app:layout_constraintStart_toStartOf="@id/sBackUp"
                    app:layout_constraintTop_toBottomOf="@id/sBackUp" />

                <ImageView
                    android:id="@+id/sStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_style"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sBackUp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Style"
                    app:layout_constraintEnd_toEndOf="@id/sStyle"
                    app:layout_constraintStart_toStartOf="@id/sStyle"
                    app:layout_constraintTop_toBottomOf="@id/sStyle" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">


                <ImageView
                    android:id="@+id/sFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_feedback"
                    app:layout_constraintEnd_toStartOf="@id/sHelp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    app:layout_constraintEnd_toEndOf="@id/sFeedback"
                    app:layout_constraintStart_toStartOf="@id/sFeedback"
                    app:layout_constraintTop_toBottomOf="@id/sFeedback" />

                <ImageView
                    android:id="@+id/sHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_help"
                    app:layout_constraintEnd_toStartOf="@id/sRecommended"
                    app:layout_constraintStart_toEndOf="@id/sFeedback"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    app:layout_constraintEnd_toEndOf="@id/sHelp"
                    app:layout_constraintStart_toStartOf="@id/sHelp"
                    app:layout_constraintTop_toBottomOf="@id/sHelp" />

                <ImageView
                    android:id="@+id/sRecommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_recommend"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sHelp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    app:layout_constraintEnd_toEndOf="@id/sRecommended"
                    app:layout_constraintStart_toStartOf="@id/sRecommended"
                    app:layout_constraintTop_toBottomOf="@id/sRecommended" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/income"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/signUP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView" />

    <Button
        android:id="@+id/signUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/income"
        android:paddingLeft="40dp"

        android:paddingRight="40dp"
        android:text="Sign UP"
        android:textColor="@color/white"
        android:textSize="18sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/cardView" />

    <Button
        android:id="@+id/signOUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@color/expense"
        android:text="Sign out"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>